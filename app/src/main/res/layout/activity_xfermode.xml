<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:wn="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <com.wning.demo.customview.view.XfermodeRoundImageView
        android:id="@+id/riv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/demo"
        wn:type="circle" />

    <com.wning.demo.customview.view.XfermodeRoundImageView
        android:id="@+id/riv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/riv1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/demo"
        wn:type="round" />


    <com.wning.demo.customview.view.ShaderRoundImageView
        android:background="#000000"
        android:id="@+id/riv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/riv1"
        android:src="@drawable/demo"
        wn:type="circle" />


    <com.wning.demo.customview.view.ShaderRoundImageView
        android:background="#000000"
        android:id="@+id/riv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/riv2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/riv3"
        android:src="@drawable/demo"
        wn:type="round" />

    <!--<com.wning.demo.customview.view.XfermodeView-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_below="@id/riv4"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="500dp"/>-->


    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/iv" android:layout_marginTop="20dp" android:layout_below="@id/riv4"/>

</RelativeLayout>
</ScrollView>