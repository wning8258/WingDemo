<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.guagua.qiqi.ui.room.GameCenterBgView
        android:visibility="gone"
        android:id="@+id/bg"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>



    <com.guagua.qiqi.widget.QiQiImageView
        android:id="@+id/entrance"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_margin="3.5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:placeholderImage="@mipmap/qiqi_room_game_icon"
    />

    <ListView
        android:visibility="gone"
        android:id="@+id/game_center_list"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@id/entrance"
        android:listSelector="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:scrollbars="vertical"
        android:scrollbarFadeDuration="0"
        android:paddingTop="8dp"
        android:clipChildren="false"
        android:clipToPadding="false"
    />

</merge>